# ======================
# Application Configuration
# ======================
PORT=10000
NODE_ENV=development # or 'production' in live environment
SQLITE_DB=./taxera.db # Path to your SQLite database file

# ======================
# Security & Authentication
# ======================
JWT_SECRET=your_strong_jwt_secret_key_here_32+_chars
JWT_EXPIRES_IN=1h # JWT token expiration time
COOKIE_EXPIRES_IN=3600000 # Cookie expiration in ms (1 hour)

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100 # Max requests per window per IP

# ======================
# CORS Configuration
# ======================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# In production add your actual domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

